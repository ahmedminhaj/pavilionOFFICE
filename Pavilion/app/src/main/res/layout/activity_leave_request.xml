<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        tools:context=".activities.LeaveRequestActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#467A46"
            android:layout_marginTop="10dp"
            android:textSize="25dp"
            android:text="Request For Leave"/>

        <Button
            android:id="@+id/button_leave_redirect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:textColor="#FFFFFF"
            android:background="#488B4B"
            android:text="Leave management"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Day-Month-Year"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_marginTop="100dp" />
        <TextView
            android:id="@+id/pickDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Select Date"
            android:textSize="25dp"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/leave_cause"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="cause of leave"
            android:textSize="15dp"
            android:textAlignment="center"
            android:layout_marginTop="100dp" />

        <Button
            android:id="@+id/request_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Request Now"
            android:textSize="20dp"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:textColor="#4E754E"
            android:textAllCaps="true"/>

    </LinearLayout>
</ScrollView>